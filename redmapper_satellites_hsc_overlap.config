# Matter density
Omegam: 0.31
# Output directory
outputdir: hsc_redmapper_overlap/output/
output_dsigma: Dsigma_0.1_0.3.dat

# Radial bins
rbin: 20
rmax: 5
rmin: 0.01
# Lens configuration (to be used in weaklens_select.py:lens_select)
lens:
  rmax: 0.3
  rmin: 0.1
  type: redmapper_satellite_in_hsc_field
  zmax: 0.33
  zmin: 0.1
# Source configuration (to be used in weaklens_select.py:source_select)
source:
  # Blinding related
  blinded: 0
  # Source file related
  type: hsc-wide-s16a_v2.0
  filetype: fits
  format: hsc
  include_corrections: true
  # Photo z related(remove # for next five for not considering full pofz)
  pofz_type: mizuki
  fullpofz: false
  photoz_risk_best_cut: 0.5
  photoz_estimate: _best
  zdiff: 0.0
