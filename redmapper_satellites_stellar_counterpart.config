# Output directory
outputdir: redmapper/output/redmapper_satellites/run20/stellar_counterparts/
output_dsigma: Dsigma_0.7_0.9.dat

# Radial bins
rbin: 20
rmax: 5
rmin: 0.01
# Lens configuration (to be used in weaklens_select.py:lens_select)
lens:
  rmax: 0.9
  rmin: 0.7
  type: redmapper_satellite_stellar_counterpart
  zmax: 0.33
  zmin: 0.1
